{% extends 'base.html.twig' %}

{% block title %}Blog Posts{% endblock %}

{% block body %}
    <h1>Blog Posts</h1>
    <ul>
        {% for post in posts %}
            <li>
                <h2>{{ post.title }}</h2>
                <p>{{ post.content }}</p>
                <small>Posted on: {{ post.createdAt|date('Y-m-d H:i') }}</small>
            </li>
        {% else %}
            <p>No posts available.</p>
        {% endfor %}
    </ul>
{% endblock %}


